{
	"style" : "groupbox",
	"title" : "Button Properties",
	"layout": [
		{
			"control": "comboBox",
			"name": "type",
			"title": "Type",
			"type": "int",
			"tooltip": "What type of button?",
			"value-default": 0,
			"elements": ["Normal", "Deteriorated Button"]
		},
        {
			"control": "spinBox",
			"type": "int",
			"name": "delay",
			"title": "Delay",
			"tooltip": "How long should the button stay pressed? Delay is in units of 10 frames (1 = 10 frames, 2 = 20 frames)",
			"value-default": 2,
			"value-min": 1,
			"value-max": 99,
			"single-step": 1
		},
		{
			"control": "comboBox",
			"name": "state",
			"title": "State",
			"type": "int",
			"tooltip": "Should it be on?",
			"value-default": 0,
			"elements": ["Off", "On"]
		}
	]
}
